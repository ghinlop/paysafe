<%- include('./layout/header.ejs') -%>
    <header>
        <%- include('./comp/nav.ejs') -%>
    </header>
    <main class="uk-container py-3">
        <div class="row">
            <div class="col-md-3">
                <%- include('./comp/widget-left.ejs') -%>
            </div>
            <div class="col-md-6">
                <div class="bg-white">
                    <h5 class="my-0 p-3 align-items-center border-bottom border-muted">
                        <i uk-icon="icon: search; ratio: 1.5"></i>
                        <span class="uk-text-large">Kiểm tra giao dịch</span>
                    </h5>
                    <form class="uk-form-horizontal" action="">
                        <div class="px-3 py-md-5 py-3">
                            <label class="uk-form-label uk-text-bold">Nhập mã giao dịch</label>
                            <div class="uk-form-controls">
                                <input type="number" class="uk-input border-skrill">
                                <span class="d-block text-danger">
                                    <i class="fa fa-close mr-1"></i>
                                    Lỗi! Mã giao dịch không tồn tại
                                </span>
                            </div>
                        </div>
                        <div class="py-3 border-top border-muted text-center bg-light">
                            <div class="btn btn-dark btn-lg px-4 rounded-0">Kiểm tra</div>
                        </div>
                    </form>
                </div>
            </div>
            <div class="col-md-3">
                <%- include('./comp/widget-right.ejs') -%>
            </div>
        </div>
    </main>
    <%- include('./layout/footer.ejs') -%>